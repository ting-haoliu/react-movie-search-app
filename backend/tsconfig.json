{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true,
    "isolatedModules": true,

    "sourceMap": true,
    "declaration": false
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
